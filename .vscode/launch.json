    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'optimus'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=optimus",
                    "--package=optimus"
                ],
                "filter": {
                    "name": "optimus",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'optimus'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=optimus",
                    "--package=optimus"
                ],
                "filter": {
                    "name": "optimus",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Metal Kernel Launch (test)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                ],
            },
            "args": ["test_metal_kernel_launch", "--nocapture"],
            "cwd": "${workspaceFolder}"
        },
    ],
}